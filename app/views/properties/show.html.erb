      <div class="small-12 medium-9 columns small-centered">
    <div class="section rental"></div>
    <div class="row">
        <div class="medium-6 columns">
          <% unless @property.images.empty? %>
            <div class="orbit" role="region" aria-label="Pictures" data-orbit>
            <ul class="orbit-container">
                <button class="orbit-previous"><span class="show-for-sr">Previous Slide</span>&#9664;&#xFE0E;</button>
                <button class="orbit-next"><span class="show-for-sr">Next Slide</span>&#9654;&#xFE0E;</button>
          <% @property.images.each do |image| %>
            <li class="orbit-slide <%= "is-active" if image == @property.main_image %>">
              <%= image_tag image.url, class: "orbit-image" %>
              <figcaption class="orbit-caption"></figcaption>
            </li>
          <% end %>
            </ul>
        </div>
        <% end %>
        </div>
        <div class="medium-6 large-5 columns" id="firstdesc">
            <h3><%= @property.address1 %></h3>
            <p><%= @property.description %></p>

            <label><%= @property.bedrooms %> Bedrooms</label><br>
            <label><%= @property.bathrooms %> Bath</label><br>
            <!-- <label>Lease</label><br> -->
            <h5><%= number_to_currency(@property.price) %> Monthly Rent</h5><br>
            <% if @property.unclaimed? %>
              <%= link_to "Claim Property", claim_property_path(@property), class: "button large expanded" %>
            <% elsif @property.owner == current_user %>
              <%= link_to "Edit Property", edit_property_path(@property), class: "button large expanded" %>
            <% else %>
              <a class="button large expanded" href="#">Rent Now</a>
            <% end %>
            <div class="small secondary expanded button-group">
                <a class="button">Facebook</a> <a class="button">Twitter</a>
                <a class="button">Instagram</a>
            </div>
        </div>
    </div>
