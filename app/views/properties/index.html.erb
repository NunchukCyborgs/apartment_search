<p id="notice"><%= notice %></p>

<h1>Listing Properties</h1>

<table>
  <thead>
    <tr>
      <th>Address1</th>
      <th>Address2</th>
      <th>Zipcode</th>
      <th>Price</th>
      <th>Square footage</th>
      <th>Contact number</th>
      <th>Contact email</th>
      <th>Latitude</th>
      <th>Longitude</th>
      <th>Description</th>
      <th>Rented at</th>
      <th>Bedrooms</th>
      <th>Bathrooms</th>
      <th>Lease length</th>
      <th>Owner</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @properties.each do |property| %>
      <tr>
        <td><%= property.address1 %></td>
        <td><%= property.address2 %></td>
        <td><%= property.zipcode %></td>
        <td><%= property.price %></td>
        <td><%= property.square_footage %></td>
        <td><%= property.contact_number %></td>
        <td><%= property.contact_email %></td>
        <td><%= property.latitude %></td>
        <td><%= property.longitude %></td>
        <td><%= property.description %></td>
        <td><%= property.rented_at %></td>
        <td><%= property.bedrooms %></td>
        <td><%= property.bathrooms %></td>
        <td><%= property.lease_length %></td>
        <td><%= property.owner_id %></td>
        <td><%= link_to 'Show', property %></td>
        <td><%= link_to 'Edit', edit_property_path(property) %></td>
        <td><%= link_to 'Destroy', property, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

